{# templates/base.html.twig #}
{% extends 'base.html.twig' %}

{% block head %}

	<script src="{{ asset('/js/canvas.js') }}" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}


	<div class="container d-flex h-100">
		<div class="row align-self-center w-100">
			<div class="col-6 mx-auto">
				<div class="login">
					<h1 class="display-4">Formulario</h1>
					<form action="{{ path('formulario_send') }}">
						<div class="form-group">
							<label for="nombreInput">Nombre</label>
							<input readonly="readonly" name="name" type="text" class="form-control" id="nombreInput" placeholder="" value={{ nombre }}>
						</div>
						<div class="form-group">
							<label for="emailInput">Email</label>
							<input readonly="readonly" name="email" type="text" class="form-control" id="emailInput" placeholder="" value={{ email }}>
						</div>
						<div class="form-group">
							<label>Firma</label>
							<canvas id="pizarra"></canvas>

							<button class="btn btn-primary" id="clearCanvasSimple" type="button">Rehacer</button>
						</div>
						<button type="submit" class="btn btn-primary">
							Confirmar
						</button>
					</form>
				</div>
			</div>
		</div>
	</div>


	<h1>
		Este es el nombre:
		{{ nombre }}</h1>
	<h1>
		Este es el email:
		{{ email }}</h1>

	<button class="btn btn-primary" id="clearCanvasSimple" type="button">Clear</button>
	<div id="canvasDiv"></div>

{% endblock %}
